<div class="pins-page-main">
	<div class="jumbotron center">
  <h1>Welcome To My Pin-Terested App</h1> <br>
</div>

<div id="pins" class="transitions-enabled">
    <% @pins.each do |pin| %>
	    <div class="box">
	    	<div class="panel panel-default main-pins-panel">
			       <%= link_to image_tag(pin.image.url(:medium)), pin%> <br>
			    <div class="panel-body">
			       <%= pin.description %> <br>
			       <%= pin.user.username if pin.user %> <br>

			       <% if pin.user == current_user%>
			         <%= link_to 'Edit', edit_pin_path(pin) %>
			         <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %> <br>
			        <%end%>
		        </div>
		    </div>
	    </div>
    <% end %>
</div>
</div>
